@model Vidly.Models.Movie

@{ 
    ViewBag.Titile = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Data Added: @Model.DateAdded.ToLongDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
